<?xml version="1.0" encoding="utf-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <!--CREATE USER TABLE-->
    <changeSet author="dsimeonova" id="user_table_id">
        <createTable tableName="users">

            <column name="id" type = "bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!--TABLE FIELDS-->
            <column name="username" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
            <column name="first_name" type="varchar(255)"/>
            <column name="last_name" type="varchar(255)"/>
            <column name="years" type="bigint"/>
            <column name="with_family_card" type="boolean"/>
            <column name="with_over_60s_railway_card" type="boolean"/>
            <column name="with_child_under_16_years" type="boolean"/>
            <!-- END HERE -->
        </createTable>
    </changeSet>
    <!-- END HERE -->

    <!-- CREATED SEQUENCE GENERATOR -->
    <changeSet id="create_user_sequence_generator" author="dsimeonova">
        <createSequence sequenceName="user_sequence_generator"
                        startValue="1000"
                        incrementBy="1"/>
    </changeSet>
    <!-- END HERE -->
</databaseChangeLog>