<?xml version="1.0" encoding="utf-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <!--CREATE RESERVATION TABLE-->
    <changeSet author="dsimeonova" id="reservation_table_id">
        <createTable tableName="reservation">

            <column name="id" type = "bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!--TABLE FIELDS-->
            <column name="status" type="varchar(255)"/>
            <!-- END HERE -->

            <!--FOREIGN KEYS-->
            <column  name="user_id" type = "bigint"/>
            <column  name="ticket_id" type = "bigint"/>
            <!-- END HERE -->
        </createTable>
    </changeSet>
    <!-- END HERE -->

    <!-- CREATE SEQUENCE GENERATOR -->
    <changeSet id="create_reservation_sequence_generator" author="dsimeonova">
        <createSequence sequenceName="reservation_sequence_generator"
                        startValue="1000"
                        incrementBy="1"/>
    </changeSet>
    <!-- END HERE -->

    <!-- CREATE FOREIGN KEYS -->
    <changeSet id="added_fk_user_to_reservation_table" author="dsimeonova">
        <addForeignKeyConstraint baseTableName="reservation" baseColumnNames="user_id"
                                 constraintName="fk_user_to_reservation"
                                 referencedTableName="users" referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="added_fk_ticket_to_reservation_table" author="dsimeonova">
        <addForeignKeyConstraint baseTableName="reservation" baseColumnNames="ticket_id"
                                 constraintName="fk_ticket_to_reservation"
                                 referencedTableName="ticket" referencedColumnNames="id"/>
    </changeSet>
    <!-- END HERE -->
</databaseChangeLog>