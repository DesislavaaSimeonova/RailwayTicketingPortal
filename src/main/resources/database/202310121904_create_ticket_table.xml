<?xml version="1.0" encoding="utf-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <!--CREATE TICKET TABLE-->
    <changeSet author="dsimeonova" id="ticket_table_id">
        <createTable tableName="ticket">

            <column name="id" type = "bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!--TABLE FIELDS-->
            <column name="type" type="varchar(255)"/>
            <column name="departure_time" type="timestamp"/>
            <column name="start_destination" type="varchar(255)"/>
            <column name="end_destination" type="varchar(255)"/>
            <!-- END HERE -->

            <!--FOREIGN KEYS-->
            <column  name="user_id" type = "bigint"/>
            <!-- END HERE -->
        </createTable>
    </changeSet>
    <!-- END HERE -->

    <!-- CREATE SEQUENCE GENERATOR -->
    <changeSet id="create_ticket_sequence_generator" author="dsimeonova">
        <createSequence sequenceName="ticket_sequence_generator"
                        startValue="1000"
                        incrementBy="1"/>
    </changeSet>
    <!-- END HERE -->

    <!-- CREATE FOREIGN KEYS -->
    <changeSet id="added_fk_user_to_thicket_table" author="dsimeonova">
        <addForeignKeyConstraint baseTableName="ticket" baseColumnNames="user_id"
                                 constraintName="fk_user_to_ticket"
                                 referencedTableName="users" referencedColumnNames="id"/>
    </changeSet>
    <!-- END HERE -->
</databaseChangeLog>